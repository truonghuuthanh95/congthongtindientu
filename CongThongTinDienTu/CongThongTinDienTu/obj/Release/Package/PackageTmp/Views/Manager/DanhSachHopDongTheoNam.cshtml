@model IEnumerable<CongThongTinDienTu.Models.DAO.HopDong>
@{
    ViewBag.Title = "Danh sách hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Hợp đồng</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Hợp đồng @ViewBag.Year</h1>
    </div>
</div>

<div class="panel panel-default">

    <div class="panel-body">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-8 text-right" style="padding-bottom: 30px">
                <form class="form-inline">
                    <div class="form-group">
                        <label for="exampleInputName2">Năm kí hợp đồng</label>
                        <select class="form-control" id="namkihopdong" onchange="location = this.value;">
                            @{
                                for (int i = 2016; i < DateTime.Now.Year + 1; i++)
                                {
                                    if (i == ViewBag.Year)
                                    {
                                        <option value="/quanly/danhsachhopdong/@i" selected>@i</option>
                                    }
                                    else
                                    {
                                        <option value="/quanly/danhsachhopdong/@i">@i</option>
                                    }

                                }
                            }

                        </select>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" onclick="downloadexcel();"><span class="glyphicon glyphicon-download"></span> Xuất Excel</button>
                    </div>
                </form>
            </div>
        </div>
        <table class="table table-hover table-responsive" id="danhsachhopdong">
            <thead>
                <tr>
                    <th>Số HD</th>
                    <th>Tên Trường</th>
                    <th>Cấp</th>
                    <th>Quận/Huyện</th>
                    <th>DVQL</th>
                    <th>Ngày Kí</th>
                    <th>Ngày HL</th>
                    <th>HT TT</th>
                    <th>Loại HD</th>
                    <th>Số năm</th>
                    <th>Số Tiền</th>
                    <th>Ngày Đóng</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaHopDong</td>
                            <td>@item.School.TenTruong</td>
                            <td>@item.School.CapTruong.TenVietTat</td>
                            <td>@item.School.Ward.District.Type @item.School.Ward.District.Name</td>
                            <td>@item.School.DVQL.Ten</td>
                            <td>@item.NgayKiHD.Value.ToString("dd/MM/yyyy")</td>
                            <td>@item.NgayHieuLucHD.Value.ToString("dd/MM/yyyy")</td>
                            @{
                                if (item.IsThanhToanBangTienMat == true)
                                {
                                    <td>TM</td>
                                }
                                else if (item.IsThanhToanBangTienMat == false)
                                {
                                    <td>CK</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                            }
                            @{
                                if (item.IsTaoMoi == true)
                                {
                                    <td>Tạo mới</td>
                                }
                                else
                                {
                                    <td>Duy trì</td>
                                }
                            }
                            <td>@item.SoNam năm</td>
                            <td>@String.Format("{0:0,0}", item.SoTien)</td>

                            @{
                                if (item.NgayThanhToan != null)
                                {
                                    <td>@(((DateTime)item.NgayThanhToan).ToString("dd/MM/yyyy"))</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                            }
                            <td><button class="btn btn-sm btn-primary" onclick="setIdToIdHopDong(@item.Id);" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-edit"></span></button></td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Số HD</th>
                    <th>Tên Trường</th>
                    <th>Cấp</th>
                    <th>Quận/Huyện</th>
                    <th>Ngày Kí</th>
                    <th>Ngày HL</th>
                    <th>HT TT</th>
                    <th>Loại HD</th>
                    <th>Số Tiền</th>
                    <th>Ngày Đóng</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Cập nhật ngày đóng tiền</h4>
            </div>
            <div class="modal-body">
                <form>
                    <input hidden id="idHopDong" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ngày kí HĐ</label>
                        <input type="text" class="form-control datepicker" id="ngaykihd" value="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ngày hiệu lực</label>
                        <input type="text" class="form-control datepicker" id="ngayhieuluc" value="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ngày đóng tiền</label>
                        <input type="text" class="form-control datepicker" id="ngaydong" value="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">HTTT</label>
                        <select class="form-control" id="hinhthucthanhtoan">
                            <option value="true">Tiền mặt</option>
                            <option value="false">Chuyển khoản</option>
                            <option value="no">Không chọn</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="capNhatNgayDongTien();">Cập nhật</button>
            </div>
        </div>
    </div>
</div>
<script>
    function downloadexcel() {
        window.location.href = '/quanly/downloadhopdong/@ViewBag.Year';
}
$(document).ready(function () {
    $('#danhsachhopdong').DataTable({
        initComplete: function () {
            this.api().columns().every(function () {
                var column = this;
                var select = $('<select><option value=""></option></select>')
                    .appendTo($(column.footer()).empty())
                    .on('change', function () {
                        var val = $.fn.dataTable.util.escapeRegex(
                            $(this).val()
                        );

                        column
                            .search(val ? '^' + val + '$' : '', true, false)
                            .draw();
                    });

                column.data().unique().sort().each(function (d, j) {
                    select.append('<option value="' + d + '">' + d + '</option>')
                });
            });
        }
    });
    $('.datepicker').datepicker({
        format: 'dd-mm-yyyy',
        autoclose: true,

    });
})
function setIdToIdHopDong(id) {
    $('#idHopDong').val(id);
    $.get("/quanly/gethopdongbyid/" + id, function (data, status) {
        var hopdong = JSON.parse(data.Results);
        $('#ngaydong').val(hopdong.NgayThanhToan != null ? moment(hopdong.NgayThanhToan).format('DD-MM-YYYY') : '');
        debugger
        if (hopdong.IsThanhToanBangTienMat == true) {
            $('#hinhthucthanhtoan').val('true');
        }
        else if (hopdong.IsThanhToanBangTienMat == false) {
            $('#hinhthucthanhtoan').val('false');
        }
        else {
            $('#hinhthucthanhtoan').val('no');
        }

        $('#ngaykihd').val(moment(hopdong.NgayKiHD).format('DD-MM-YYYY'));
        $('#ngayhieuluc').val(moment(hopdong.NgayHieuLucHD).format('DD-MM-YYYY'));
    });
}
function capNhatNgayDongTien() {
    //if ($('#ngaydong').val() == '') {
    //    $('#errorCapNhatNgayDong').text('Vui lòng chọn ngày');

    //}   
        $.post("/quanly/capnhathopdong", {
            id: $('#idHopDong').val(),
            ngayDongTien: $('#ngaydong').val() == '' ? null : $('#ngaydong').val(),
            httt: $('#hinhthucthanhtoan').val(),
            ngayKiHD: $('#ngaykihd').val(),
            ngayHieuLuc: $('#ngayhieuluc').val()
        }, function (data, status) {
            if (data.StatusCode == 200) {
                window.location.reload();
            }
            else {
                $('#errorCapNhatNgayDong').text('Có lỗi xảy ra');
            }
        })
    }
</script>